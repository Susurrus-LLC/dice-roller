{
  "name": "dice-roller",
  "version": "0.1.0",
  "description": "Dice roller that displays a probabilistic analysis",
  "homepage": "https://nai888.github.io/dice-roller/",
  "repository": {
    "type": "git",
    "url": "https://github.com/nai888/dice-roller"
  },
  "bugs": {
    "url": "https://github.com/nai888/dice-roller/issues"
  },
  "author": "Ian A. Cook <ian@code.ianacook.com>",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "postbuild": "yarn deploy",
    "deploy": "gh-pages -d build",
    "format": "prettier-standard src/**/*.{js,jsx,ts,tsx}",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard",
      "git add"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.1",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "modularscale-sass": "^3.0.8",
    "node-sass": "^4.12.0",
    "normalize.css": "^8.0.1",
    "react": "^16.9.0",
    "react-d3": "^0.4.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.2",
    "redux": "^4.0.4",
    "typescript": "3.6.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier-standard": "^14.0.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "standard-with-typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
