{
  "name": "dice-roller",
  "version": "0.1.2",
  "description": "Dice roller that displays a probabilistic analysis",
  "homepage": "https://susurrus-llc.github.io/dice-roller/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Susurrus-LLC/dice-roller"
  },
  "bugs": {
    "url": "https://github.com/Susurrus-LLC/dice-roller/issues"
  },
  "author": "Ian A. Cook <ian@code.ianacook.com>",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build",
    "format": "prettier-standard src/**/*.{js,jsx,ts,tsx}",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@types/jest": "26.0.23",
    "@types/node": "15.3.0",
    "@types/react": "17.0.5",
    "@types/react-dom": "17.0.6",
    "modularscale-sass": "^3.0.10",
    "node-sass": "^6.0.0",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-d3": "^0.4.0",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "redux": "^4.1.0",
    "typescript": "4.2.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier-standard": "^16.4.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "standard-with-typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/indent": ["warn", 2]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
